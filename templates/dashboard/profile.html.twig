                <div class="p-6 mb-0 rounded-t-2xl">
                    <h5 class="dark:text-white">Profile Info</h5>
                </div>
                <div class="flex-auto p-6 pt-0">
                    {{ form_start(profileForm, {action:path('app_dashboard_profile_edit', {'id': user.id}), method: 'POST' }) }}
                        <div class="flex flex-wrap -mx-3">
                            <div class="w-6/12 max-w-full px-3 flex-0">
                                <label class="mb-2 ml-1 text-xs font-bold text-slate-700 dark:text-white/80" for="Last Name">
                                    {{ form_label(profileForm.firstname) }}
                                </label>
                                <div class="form-error">
                                    {{ form_errors(profileForm.firstname) }}
                                </div>
                                <div class="relative flex flex-wrap items-stretch w-full rounded-lg">
