{# templates/register/step2.html.twig #}

<div id="step2" class="step hidden">
    <h2 class="text-lg font-semibold mb-4">Etape 2 : Coordonnées de la société</h2>
    <div class="mb-4">
        {{ form_label(registrationForm.businessName, 'Nom de la société') }}
        {{ form_widget(registrationForm.businessName, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600'}}) }}
    </div>
    <div class="mb-4">
        {{ form_label(registrationForm.address, 'Adresse de la société') }}
        {{ form_widget(registrationForm.address, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600'}}) }}
    </div>
    <div class="mb-4">
        {{ form_label(registrationForm.siret, 'Numéro de SIRET') }}
        {{ form_widget(registrationForm.siret, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600'}}) }}
    </div>
    <div class="mb-4">
        {{ form_label(registrationForm.tvaNumber, 'Numéro de TVA') }}
        {{ form_widget(registrationForm.tvaNumber, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600'}}) }}
    </div>
    <div class="flex justify-center items-center mt-6">
        <div class="w-1/2">
            <div class="w-full rounded-full bg-gray-300">
                <div class="w-1/2 bg-blue-500 rounded-full"></div>
            </div>
        </div>
    </div>
</div>