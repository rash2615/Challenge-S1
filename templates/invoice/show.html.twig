{% extends 'base.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block body %}
    <h1>Invoice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Customer_id</th>
                <td>{{ invoice.customerId }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ invoice.status }}</td>
            </tr>
            <tr>
                <th>Sent_at</th>
                <td>{{ invoice.sentAt ? invoice.sentAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Paid_at</th>
                <td>{{ invoice.paidAt ? invoice.paidAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Chrono</th>
                <td>{{ invoice.chrono }}</td>
            </tr>
            <tr>
                <th>Tva_applicable</th>
                <td>{{ invoice.tvaApplicable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ invoice.createdAt ? invoice.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Service_done_at</th>
                <td>{{ invoice.serviceDoneAt ? invoice.serviceDoneAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Payment_deadline</th>
                <td>{{ invoice.paymentDeadline ? invoice.paymentDeadline|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Payment_delay_rate</th>
                <td>{{ invoice.paymentDelayRate }}</td>
            </tr>
            <tr>
                <th>Is_draft</th>
                <td>{{ invoice.isDraft ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_invoice_index') }}">back to list</a>

    <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}">edit</a>

    {{ include('invoice/_delete_form.html.twig') }}
{% endblock %}
