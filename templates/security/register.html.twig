{% extends 'base.html.twig' %}

{% block title %}Sign up!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign up!</h1>
    
    {# form register user #}

    <div>
        <label for="inputFirstName">First Name</label>
        <input type="text" name="firstname" id="inputFirstName" class="form-control" autocomplete="firstname" required autofocus>

        <small id="firstnameHelpBlock" class="form-text text-muted">
            Your first name must be 2-20 characters long, contain letters and must not contain spaces, special characters, or emoji.
        </small>

        {% if errors.firstname is defined %}
            <div class="alert alert-danger">{{ errors.firstname }}</div>
        {% endif %}

    </div>

    <div>
        <label for="inputLastName">Last Name</label>
        <input type="text" name="lastname" id="inputLastName" class="form-control" autocomplete="lastname" required>

        <small id="lastnameHelpBlock" class="form-text text-muted">
            Your last name must be 2-20 characters long, contain letters and must not contain spaces, special characters, or emoji.
        </small>

        {% if errors.lastname is defined %}
            <div class="alert alert-danger">{{ errors.lastname }}</div>
        {% endif %}
    </div>

    <div>
        <label for="inputEmail">Email</label>
        <input type="text" name="email" id="inputEmail" class="form-control" autocomplete="email" required>

        <small id="emailHelpBlock" class="form-text text-muted">
            Your email must be a valid email address.
        </small>

        {% if errors.email is defined %}
            <div class="alert alert-danger">{{ errors.email }}</div>
        {% endif %}
    </div>

    <div>
        <label for="inputPhone">Phone</label>
        <input type="text" name="phone" id="inputPhone" class="form-control" autocomplete="phone" required>

        <small id="phoneHelpBlock" class="form-text text-muted">
            Your phone must be a valid phone number.
        </small>

        {% if errors.phone is defined %}
            <div class="alert alert-danger">{{ errors.phone }}</div>
        {% endif %}
    </div>

    <div>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="password" required>

        <small id="passwordHelpBlock" class="form-text text-muted">
            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
        </small>

        {% if errors.password is defined %}
            <div class="alert alert-danger">{{ errors.password }}</div>
        {% endif %}
    </div>

    <div>
        <label for="inputConfirmpassword">Confirm Password</label>
        <input type="password" name="passwordConfirm" id="inputConfirmpassword" class="form-control" autocomplete="password" required>

        <small id="passwordConfirmHelpBlock" class="form-text text-muted">
            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
        </small>

        {% if errors.passwordConfirm is defined %}
            <div class="alert alert-danger">{{ errors.passwordConfirm }}</div>
        {% endif %}
    </div>

    <div>
        <label for="inputAddress">Address</label>
        <input type="text" name="address" id="inputAddress" class="form-control" autocomplete="address" required>

        <small id="addressHelpBlock" class="form-text text-muted">
            Your address must be 2-50 characters long, contain letters and numbers, and must not contain special characters, or emoji.
        </small>

        {% if errors.address is defined %}
            <div class="alert alert-danger">{{ errors.address }}</div>
        {% endif %}
    </div>

    <div>
        <label for="inputCity">City</label>
        <input type="text" name="city" id="inputCity" class="form-control" autocomplete="city" required>

        <small id="cityHelpBlock" class="form-text text-muted">
            Your city must be 2-50 characters long, contain letters and must not contain special characters, or emoji.
        </small>

        {% if errors.city is defined %}
            <div class="alert alert-danger">{{ errors.city }}</div>
        {% endif %}

    </div>

    <div>
        <label for="inputPostalCode">Postal Code</label>
        <input type="text" name="postalCode" id="inputPostalCode" class="form-control" autocomplete="postalCode" required>

        <small id="postalCodeHelpBlock" class="form-text text-muted">
            Your postal code must be a valid postal code.
        </small>

        {% if errors.postalCode is defined %}
            <div class="alert alert-danger">{{ errors.postalCode }}</div>
        {% endif %}
    </div>

    <div>
        <label for="inputCountry">Country</label>
        <input type="text" name="country" id="inputCountry" class="form-control" autocomplete="country" required>

        <small id="countryHelpBlock" class="form-text text-muted">
            Your country must be 2-50 characters long, contain letters and must not contain special characters, or emoji.
        </small>

        {% if errors.country is defined %}
            <div class="alert alert-danger">{{ errors.country }}</div>
        {% endif %}
    </div>

    <div>
        <label for="inputBusinessName">Business Name</label>
        <input type="text" name="businessName" id="inputBusinessName" class="form-control" autocomplete="businessName" required>

        <small id="businessNameHelpBlock" class="form-text text-muted">
            Your business name must be 2-50 characters long, contain letters and must not contain special characters, or emoji.
        </small>

        {% if errors.businessName is defined %}
            <div class="alert alert-danger">{{ errors.businessName }}</div>
        {% endif %}
    </div>

    <div>
        <label for="inputSiret">Siret</label>
        <input type="text" name="siret" id="inputSiret" class="form-control" autocomplete="siret" required>

        <small id="siretHelpBlock" class="form-text text-muted">
            Your siret must be a valid siret.
        </small>

        {% if errors.siret is defined %}
            <div class="alert alert-danger">{{ errors.siret }}</div>
        {% endif %}
    </div>

    <div>
        <label for="inputTvaNumber">Tva Number</label>
        <input type="text" name="tvaNumber" id="inputTvaNumber" class="form-control" autocomplete="tvaNumber" required>

        <small id="tvaNumberHelpBlock" class="form-text text-muted">
            Your tva number must be a valid tva number.
        </small>

        {% if errors.tvaNumber is defined %}
            <div class="alert alert-danger">{{ errors.tvaNumber }}</div>
        {% endif %}
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary" type="submit">
        Register now!
    </button>
</form>
{% endblock %}
